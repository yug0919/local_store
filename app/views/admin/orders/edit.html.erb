<header class="topbar">
    <h1>Edit Order</h1>
    <div class="user-info">
        <%= current_admin.email %><br>
        <%= button_to "Logout", destroy_admin_session_path, method: :delete, data: { turbo: false }, class: "btn btn-logout" %>
    </div>
</header>

<center>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
</center>

<div class="form-container">
    <h2>Update Order Status</h2>
    <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |form| %>
        <div class="form-group">
            <label for="status">Status</label>
            <%= form.select :status, ["Pending", "Processing", "Shipped", "Delivered", "Cancelled"], {}, class: "form-control" %>
        </div>

        <div class="form-actions">
            <%= form.submit "Update Status", class: "btn btn-primary" %>
            <%= link_to "Back", admin_orders_path, class: "btn btn-secondary" %>
        </div>
    <% end %>
</div>
