<header class="topbar">
    <h1>Products</h1>
    <div class="user-info">
        <%= current_admin.email %><br>
        <%= button_to "Logout", destroy_admin_session_path, method: :delete, data: { turbo: false }, class: "btn btn-logout" %>
    </div>
</header>

<center>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
</center>

<div class="table-container">
    <h2 class="mb-3">Products</h2>
    <div class="d-flex justify-content-between mb-3">
        <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary" %>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
                <tr>
                    <td><%= product.name %></td>
                    <td>â‚¹<%= number_with_delimiter(product.price, delimiter: ",") %></td>
                    <td></td>
                    <td>
                        <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-warning btn-sm" %>
                        <%= button_to "Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
